{
    // Autoscrolldown Extension
    "autoscrolldown.allFiles": true,
    "autoscrolldown.onlyWhenAtEnd": true,

    // Bracket Pair Colorizer 2 Extension
    "bracket-pair-colorizer-2.colors": [
        "Gold",
        "Orchid",
        "LightSkyBlue",
        "SpringGreen",
        "Coral",
        "MediumSlateBlue",
        "Sienna"
    ],

    // Commonly Used
    "editor.dragAndDrop": false,
    "editor.fontFamily": "Fira Code, inconsolata",
    "editor.fontSize": 14,
    "editor.insertSpaces": true,
    "editor.multiCursorModifier": "ctrlCmd",
    "editor.tabSize": 4,
    "editor.wordWrap": "off",
    "files.autoSave": "onFocusChange",

    // Editor
    "editor.bracketPairColorization.enabled": true,
    "editor.cursorBlinking": "phase",
    "editor.fontLigatures": true,
    "editor.formatOnType": true,
    "editor.guides.bracketPairs": true,
    "editor.minimap.enabled": true,
    "editor.minimap.showSlider": "always",
    "editor.renderWhitespace": "none",
    "editor.rulers": [80, 88, 150],
    "editor.smoothScrolling": true,

    // Files
    "files.associations": {
        "**/.i3/config": "i3",
        "**/i3/config": "i3",
        "sxhkdrc": "sxhkdrc"
    },
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,

    // Prettier configuration
    "prettier.tabWidth": 4,

    // Python configuration
    "python.formatting.provider": "black",
    "python.linting.enabled": true,
    "python.linting.flake8Args": ["--max-line-length=88", "--ignore=E203,W503"],
    "python.venvPath": "~/.virtualenvs",

    // Rust configuration
    "rust-client.channel": "stable",
    "rust.jobs": 4,
    "rust.show_warnings": true,
    "rust.racer_completion": true,
    "rust.wait_to_build": 1500,

    // TODO Highlight Extension
    "todohighlight.isEnable": true,
    "todohighlight.keywords": ["TODO", "FIXME", "DEBUG"],

    // Workbench
    "workbench.colorTheme": "Monokai",

    // Window
    "window.menuBarVisibility": "toggle",

    // Misc
    "breadcrumbs.enabled": true,
    "gitblame.ignoreWhitespace": true,
    "search.smartCase": true,

    // [Markdown]
    "[markdown]": {
        "editor.rulers": [100],
        "editor.renderWhitespace": "boundary",
        "editor.wordWrapColumn": 100,
        "editor.wordWrap": "bounded",
        "files.trimTrailingWhitespace": false
    },
    // [YAML]
    "[yaml]": {
        "rewrap.wrappingColumn": 80
    },
    "python.dataScience.sendSelectionToInteractiveWindow": false,
    "gitlens.blame.toggleMode": "window",
    "gitlens.blame.highlight.locations": ["gutter", "line", "overview"],
    "gitlens.codeLens.recentChange.enabled": false,
    "gitlens.codeLens.enabled": false,
    "gitlens.heatmap.toggleMode": "window",
    "gitlens.recentChanges.toggleMode": "window",
    "gitlens.statusBar.reduceFlicker": true,
    "gitlens.views.repositories.enabled": false,
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "terminal.integrated.shell.linux": "/bin/zsh",
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    "codesnap.showWindowControls": false,
    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb",
        "git-rebase-todo": "gitlens.rebase"
    },
    "[python]": {

        "editor.wordBasedSuggestions": false
    },
    "jupyter.interactiveWindowMode": "perFile",
}
